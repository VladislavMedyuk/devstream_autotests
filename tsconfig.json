{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "moduleResolution": "node",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "types": ["node", "@playwright/test"],
      "baseUrl": ".",                  
      "paths": {
      "@src/*": ["src/*"],
      "@pages/*": ["src/pages/*"],
      "@helpers/*": ["src/helpers/*"],
      "@fixtures/*": ["src/fixtures/*"],
      "@types/*": ["src/types/*"]
      },
      "ignoreDeprecations": "6.0"
    },
    "include": ["src"]
  }
  